<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:maxLines="2"
			android:text="Bearer\nDetails"
			android:textColor="@color/color_stateFlowCurrent"
			android:id="@+id/tv_stateTitle" />

		<TextView
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_marginTop="@dimen/margin_8"
			android:background="@drawable/state_flow_current"
			android:gravity="center"
			android:text="1"
			android:textColor="@color/color_stateFlowCurrent"
			android:id="@+id/tv_statePosition" />
	</LinearLayout>

	<ImageView
		android:layout_width="40dp"
		android:layout_height="1dp"
		android:background="@color/colorWhite"
		android:layout_gravity="bottom"
		android:layout_marginBottom="21dp"
		android:id="@+id/iv_separatorHorizontal"/>
</LinearLayout>