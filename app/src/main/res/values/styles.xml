<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:fontFamily">@font/app_font_regular</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="CollapsingAppBarTitleStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/app_font_bold</item>
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>

    <style name="MaterialSeparator">
        <item name="android:background">@drawable/separator_capsule_accent</item>
    </style>

    <style name="Horizontal" parent="MaterialSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_separatorVertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_separatorVertical</item>
    </style>

    <style name="Vertical"  parent="MaterialSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_separatorHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_separatorHorizontal</item>
    </style>

    <style name="headerAppearance">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="labelAppearance">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="helperAppearance">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewAppearance">
        <item name="android:background">@drawable/rounded_outline_1</item>
        <item name="android:paddingTop">@dimen/margin_12</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingStart">@dimen/margin_8</item>
        <item name="android:paddingEnd">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="UserViewStyle">
        <item name="android:paddingTop">60dp</item>
        <item name="android:paddingBottom">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
    </style>

    <dimen name="margin_12">12dp</dimen>
</resources>
